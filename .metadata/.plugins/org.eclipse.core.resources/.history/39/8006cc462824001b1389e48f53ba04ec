package Movimiento;

public class ArrayEnMovimiento {
	
	public ArrayEnMovimiento() {
		
		
	}
	/* Este método recibe un array de enteros y devuelve un array de la misma longitud, 
	 * cuyo primer elemento es -1 y que a partir de la segunda posición incluye los valores  
	 * del array de entrada, excepto el último, y en el mismo orden.
	 * */
	int [] moverUno(int [] inArray) {
		if (inArray.length > 0) {
			int N = inArray.length;
			int [] arrayAux = new int[N+1];
			arrayAux[0]=-1;
			for(int i=1;i<N+1;i++) {
				arrayAux[i]= inArray[i-1];
			}
			return arrayAux;
		}
		return null;
	}
}
