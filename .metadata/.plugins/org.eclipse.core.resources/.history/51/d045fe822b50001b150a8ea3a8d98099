package AgendaBreak;

import static org.junit.Assert.assertEquals;
import org.junit.jupiter.api.Test;



class agendaBreakDiaTest {
	
	@Test
	public void testBBC_D4() throws DatoException  {
		//fail("Not yet implemented");
		Dia dia = new Dia(5);
		Cita cita = new Cita("cita1", 2);
		dia.asignarCita(9, cita);//asignamos una cita que dura de 9-11
		assertEquals(dia.getCita(9),cita);//comprobamos que la asignacion es correcta
		assertEquals(dia.getCita(12),null);//es null porque la cita duraba hasta la 11	
		assertEquals(dia.getCita(18),null);
	}
	
	@Test
	public void testBBC_D5() throws DatoException  {
		//fail("Not yet implemented");
		Dia dia = new Dia(5);
		Cita cita = new Cita("cita1", 2);
		dia.asignarCita(9, cita);//asignamos una cita que dura de 9-11
		assertEquals(dia.muestraCita(9),"9:00 cita1");//comprobamos que el return es correcto
		assertEquals(dia.muestraCita(12),"No existe");
		assertEquals(dia.muestraCita(18),"Hora no valida");
	}
	
	
	@Test
	public void testBBC_D6() throws DatoException  {
		//fail("Not yet implemented");
		Dia dia = new Dia(5);
		
		assertEquals(dia.validaHora(9),true);//comprobamos que el return es correcto
		assertEquals(dia.validaHora(12),true);
		assertEquals(dia.validaHora(18),false);
		assertEquals(dia.validaHora(2),false);
	}
	
	
	


	
	

}
